			<form action="/producto" method="POST">
				<h1>Crear articulo</h1>
			  <div class="form-group">
			    <label for="descripcion">Descripcion</label>
			    <input id="descripcion" type="text" class="form-control" placeholder="Descripcion" name="producto[descripcion]">
			  </div>
  			  <div class="form-group">
			    <label for="precioLista">Precio lista</label>
			    <input id="precioLista" type="text" class="form-control col-3" placeholder="$" name="producto[precioLista]">
			  </div>
			  <div class="form-group">
			    <label for="precioVenta">Precio venta</label>
			    <input id="precioVenta" type="text" class="form-control col-3" placeholder="$" name="producto[precioVenta]">
			  </div>
			  <div class="form-group">
			    <label for="precioXMayor">Precio al por mayor</label>
			    <input id="precioXMayor" type="text" class="form-control col-3" placeholder="$" name="producto[precioXMayor]">
			  </div>
			  <div class="input-group mb-3">
  <div class="input-group-prepend">
